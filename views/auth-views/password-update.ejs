<%- include("partials/header.ejs") %>

  <div class="container">
    <div class="server-message"></div>

    <form id="password-update-form">
      <div class="title">
        <h2>Update password</h2>
      </div>
      <div id="password-container">
        <input type="hidden" id="token" class="form-control" value="<%= token %>">
        <input type="hidden" id="tExpires" class="form-control" value="<%= tExpires %>">
        <input type="hidden" id="id" class="form-control" value="<%= id %>">
        <input type="password" id="password" maxlength="60" placeholder="Password" required>
        <p id="password-strength-text"></p>
      </div>
      <div>
        <input type="password" id="confirm-password" name="cPassword" maxlength="60" placeholder="Confirm password"
          required>
      </div>
      <div class="show-password-signup">
        <div>
          <input type="checkbox" id="show-password">
          <label for="show-password">Show password</label>
        </div>
      </div>
      <div>
        <button class="auth-btn">Update</button>
      </div>
    </form>

  </div>

  <script src="/js/password-update.js"></script>
  <script src="/js/script.js"></script>

<%- include("partials/footer.ejs") %>
<%- include("partial-views/header.ejs") %>

  <div class="app">

    <%- include("partial-views/sidebar-menu.ejs") %>

    <% if (typeof message=="undefined" ) { %>

      <main class="content">
      
        <div class="sidebar-hamburger">
          <span class="sbar"></span>
          <span class="sbar"></span>
          <span class="sbar"></span>
        </div>

        <br>
      
        <% if(typeof flash !="undefined" && flash !="" ) { %>
          <div class="server-message success">
            <%= flash %>
          </div>
        <% } %>

        <br>

        <div class="flex">
          <h3>User management</h3>
          <a href="/user-management/user-views/deleted-users">View all deleted users</a>
        </div>
        
        <br>
      
        <h4>Deleted users (<%= rows.length %>)</h4>
      
        <br>

        <form action="/user-management/user-views/search-deleted-users" method="POST">
          <div class="user-management">
            <input type="text" name="search" placeholder="Search deleted users..."><button>Search</button>
          </div>
        </form>
      
        <br>
      
        <table>
          <tr>
            <th>#</th>
            <th>First</th>
            <th>Last</th>
            <th class="text-end">Action</th>
          </tr>
          <% for(let i=0;i < rows.length;i++) { %>
            <tr>
              <td>
                <%= rows[i].id %>
              </td>
              <td>
                <%= rows[i].fName %>
              </td>
              <td>
                <%= rows[i].lName %>
              </td>
              <td class="text-end">
                <a href="/user-management/user-views/view-user/<%= rows[i].id %>"><i class="fa-solid fa-eye"></i> View</a>
              </td>
            </tr>
          <% } %>
        </table>
      </main>

    <% } else { %>

      <main class="content">
      
        <div class="sidebar-hamburger">
          <span class="sbar"></span>
          <span class="sbar"></span>
          <span class="sbar"></span>
        </div>
      
        <div class="server-message error">
          <%= message %>
        </div>
      
      </main>

    <% } %>

  </div>  

  <script src="/js/sidebar-menu.js"></script>
  <script src="/js/script.js"></script>

  <%- include("partial-views/footer.ejs") %></br>
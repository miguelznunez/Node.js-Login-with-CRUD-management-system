<%- include("partial-views/admin-header.ejs") %>
<%- include("partial-views/admin-navbar.ejs") %>

<main>
    <div class="basket">
      <div class="basket-module">
        <label for="promo-code">Enter a promotional code</label>
        <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
        <button class="promo-code-cta">Apply</button>
      </div>
      <div class="basket-labels">
        <ul>
          <li class="item item-heading">Item</li>
          <li class="price">Price</li>
          <li class="quantity">Quantity</li>
          <li class="subtotal">Subtotal</li>
        </ul>
      </div>

      <% for(let i = 0;i < cart.length;i++) { %>
        <div class="basket-product">
            <div class="item">
            <div class="product-image">
                <!-- <img src="http://placehold.it/120x166" alt="Placholder Image 2" class="product-frame"> -->
                <img src="http://localhost:5000/ecommerce-management/<%= cart[i].image %>" alt="Placholder Image 2" class="product-frame">
            </div>
            <div class="product-details">
                <h1><strong><span class="item-quantity"><%= cart[i].quantity %></span> X <%= cart[i].brand %></strong> <%= cart[i].name %></h1>
                <!-- <p><strong>Navy, Size 18</strong></p> -->
                <p>Product Code - <%= cart[i].sku %></p>
               
            </div>
            </div>

            <% if(cart[i].sale_price) { %>
                <div class="price"><%= cart[i].sale_price %></div>
            <% } else { %>
                <div class="price"><%= cart[i].price %></div>
            <% } %>
            <div class="quantity">
                <form action="/edit-product-quantity" method="POST" >
                    <input type="hidden" value="<%= cart[i].id %>" name="id">
                    <input type="submit" value="-" name="decrease_product_quantity">
                    <input type="text" value="<%= cart[i].quantity %>" class="quantity-field" readonly>
                    <input type="submit" value="+" name="increase_product_quantity">
                </form>
            </div>

            <% if(cart[i].sale_price) { %>
                <div class="subtotal"><%= cart[i].sale_price * cart[i].quantity %></div>
            <% } else { %>
                <div class="subtotal"><%= cart[i].price * cart[i].quantity %></div>
            <% } %>

            <form action="/remove-product" method="POST">
                <input type="hidden" name="id" value="<%= cart[i].id %>">
                <div class="remove">
                    <!-- <button type="submit" value="remove">Remove</button> -->
                    <input type="submit" name="remove-btn" value="remove">
                </div>
                
            </form>
            
          

        </div>
      <% } %>

    </div>
    <aside>
      <div class="summary">
        <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>
        <div class="summary-subtotal">
          <div class="subtotal-title">Subtotal</div>
          <div class="subtotal-value final-value" id="basket-subtotal">130.00</div>
          <div class="summary-promo hide">
            <div class="promo-title">Promotion</div>
            <div class="promo-value final-value" id="basket-promo"></div>
          </div>
        </div>
        <div class="summary-delivery">
          <select name="delivery-collection" class="summary-delivery-selection">
              <option value="0" selected="selected">Select Collection or Delivery</option>
             <option value="collection">Collection</option>
             <option value="first-class">Royal Mail 1st Class</option>
             <option value="second-class">Royal Mail 2nd Class</option>
             <option value="signed-for">Royal Mail Special Delivery</option>
          </select>
        </div>
        <div class="summary-total">
          <div class="total-title">Total</div>
          <div class="total-value final-value" id="basket-total">130.00</div>
        </div>
        <div class="summary-checkout">
          <button class="checkout-cta">Go to Secure Checkout</button>
        </div>
      </div>
    </aside>
  </main>

  <script src="/js/page-js/cart.js"></script>
  <script src="/js/navbar.js"></script>
  
<%- include("partial-views/footer.ejs") %>
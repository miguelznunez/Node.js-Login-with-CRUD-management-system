<%- include("partials/header.ejs") %>

  <% if (typeof message == "undefined") { %>

    <div class="container">
      
      <div class="margin"></div>

      <div class="flex">
        <a href="/user-management/active-users">User Management</a> / <p>View User</p>
      </div>

      <br>
    
      <table>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Member Since</th>
          <th>Admin</th>
        </tr>
        <% for(let i=0;i < rows.length;i++) { %>
          <tr>
            <td>
              <%= rows[i].id %>
            </td>
            <td>
              <%= rows[i].fName %>
            </td>
            <td>
              <%= rows[i].lName %>
            </td>
            <td>
              <%= rows[i].email %>
            </td>
            <td>
              <%= rows[i].status %>
            </td>
            <td>
              <%= rows[i].member_since %>
            </td>
            <td>
              <%= rows[i].admin %>
            </td>
          </tr>
        <% } %>
      </table>

    </div>

  <% } else { %>

    <div class="container">

      <div class="server-message error">
        <%= message %>
      </div>
      
      <div class="flex">
        <a href="/user-management/active-users">User Management</a> / <p>View User</p>
      </div>

    </div>

  <% } %>

  <script src="/js/script.js"></script>

  <%- include("partials/footer.ejs") %>